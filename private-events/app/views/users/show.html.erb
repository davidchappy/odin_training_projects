<h1><%= @user.name %>'s Profile</h1>
<p>Email: <%= @user.email %></p>
<% if @user.created_events.any? %>
  <h3><%= @user.name %>'s Events</h3>
  <ul class="created_events">
    <%= render @created_events %>
  </ul>
<% end %>

<% if @past_events.any? %>
  <h3>Events <%= @user.name %> attended.</h3>
  <ul>
  <% @past_events.each do |event| %>
    <li><%= event.location %> by <%= link_to event.creator.name, event.creator  %></li>
  <% end %>
  </ul>
<% end %>

<% if @upcoming_events.any? %>
  <h3>Events <%= @user.name %> will attend.</h3>
  <ul>
  <% @upcoming_events.each do |event| %>
    <li><%= event.location %> by <%= link_to event.creator.name, event.creator  %></li>
  <% end %>
  </ul>
<% end %>