<h1>Create a New Event</h1>

<%= form_for(@event) do |f| %>

  <%= f.label :location %>
  <%= f.text_field :location %>  
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>  
  <br />
  <%= f.label :date %>
  <%= f.datetime_select :date %>
  <br />
  <%= f.submit "Create Event" %>

<% end %>