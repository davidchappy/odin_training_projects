<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <%= render 'layouts/default_header' %>
  </head>

  <body>
    <% if logged_in? %>
      <p>Logged in as <strong><%= current_user.name %></strong></p>
      <%= link_to 'Log out', logout_path(current_user) %>
    <% else %>
      <%= link_to 'Sign up', new_user_path %> | 
      <%= link_to 'Log in', login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
