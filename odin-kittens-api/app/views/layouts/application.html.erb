<!DOCTYPE html>
<html>
  <head>
    <title>OdinKittensApi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <p><%= message %></p> 
    <% end %>
    
    <%= link_to 'All Kittens', kittens_path %>
    <%= link_to 'New Kitten', new_kitten_path %>
    <%= yield %>
  </body>
</html>
