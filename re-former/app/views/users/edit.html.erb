  <% if @user.errors.any? %>
    <%= @user.errors.messages %>
  <% end %>

  <%= form_for @user, url: {action: "update"} do |f| %>
    
    <%= f.text_field :username %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>

  <% end %>